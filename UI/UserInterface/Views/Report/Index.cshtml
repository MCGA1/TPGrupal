@{
  ViewData["Title"] = "Reportes";
}

<section class="py-5 text-center container main-text">
  <h1>@ViewData["Title"]</h1>
</section>

@model IEnumerable<UserInterface.Report>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary list-panel" id="list-panel">
            <div class="panel-heading list-panel-heading">
                <h1 class="panel-title list-panel-title">Assets</h1>
            </div>
            <div class="panel-body">
                <table id="log-data-table" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Servicio</th>
                            <th>Id</th>
                            <th>Mensaje</th>
                            <th>Severidad</th>
                            <th>Fecha</th>
                            <th>Excepción</th>
                            <th>Hilo</th>
                            <th>Contexto</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var asset in Model)
                        {
                            <tr>
                                <td>@asset.ServiceName</td>
                                <td>@asset.Id</td>
                                <td>@asset.Msg</td>
                                <td>@asset.Severity</td>
                                <td>@asset.Timestamp</td>
                                <td>@asset.Ex</td>
                                <td>@asset.ThreadId</td>
                                <td>@asset.SourceContext</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts
{    
 <script type="text/javascript">
  $(document).ready(function () {
      $('log-data-table').DataTable();
  });
 </script>       
}
