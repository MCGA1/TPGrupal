@{
	ViewData["Title"] = "Visualización";
}

<section class="py-5 text-center container main-text visualization-section">
	<h1>@ViewData["Title"]</h1>
	<br />
	<div class="count-container">
		<div class="count-row"><div class="box-yellow"></div>Bultos ingresados: <div id="bultos_ingresados">0</div></div>
		<div class="count-row"><div class="box-red"></div>Bultos en proceso: <div id="bultos_enproceso">0</div></div>
		<div class="count-row"><div class="box-blue"></div>Bultos apilados: <div id="bultos_apilados">0</div></div>
	</div>
	<br />
	<div class="dashboard">
		<div>
			<canvas id="visualizationChart" style="height: 40vh; width: 50vw;"></canvas>
		</div>
		<div>
			<canvas id="visualizationDonut" style="height: 30vh; width: 30vw;"></canvas>
		</div>
	</div>
</section>

@section Scripts
{    
 <script type="text/javascript" src=~/js/visualization.js ></script>
}
